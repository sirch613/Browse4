{
  "name": "browse",
  "version": "0.1.0",
  "description": "Minimal macOS browser built on Chromium.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "browser",
    "electron",
    "chromium"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.browse.app",
    "productName": "browse",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "darkModeSupport": true
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ]
  }
}
